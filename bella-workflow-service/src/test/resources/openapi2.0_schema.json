{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Parameter Example",
    "description": "Example of defining parameters in OpenAPI 2.0"
  },
  "host": "example.com",
  "basePath": "/api",
  "schemes": [
    "https"
  ],
  "paths": {
    "/example": {
      "get": {
        "summary": "Example endpoint",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
