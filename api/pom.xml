  <build>
    <plugins>
      <plugin>
        <groupId>org.jooq</groupId>
        <artifactId>jooq-codegen-maven</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>generate</goal>
            </goals>
            <phase>none</phase>
          </execution>
        </executions>

        <configuration>
          <jdbc>
            <driver>com.mysql.cj.jdbc.Driver</driver>
            <url>jdbc:mysql://m12039.mars.test.mysql.ljnode.com:12039?useSSL=false</url>
            <user>root</user>
            <password>3BU4i3X7i2I5GOd5</password>
          </jdbc>
          <generator>
            <database>
              <unsignedTypes>false</unsignedTypes>
            </database>
            <strategy>
              <name>org.jooq.codegen.DefaultGeneratorStrategy</name>
              <matchers>
                <tables>
                  <table>
                    <expression>instance</expression>
                    <daoClass>
                      <transform>PASCAL</transform>
                      <expression>$0_D_B_Dao</expression>
                    </daoClass>
                    <pojoClass>
                      <transform>PASCAL</transform>
                      <expression>$0_D_B</expression>
                    </pojoClass>
                  </table>
                  <table>
                    <expression>tenant|workflow.*|wecom.*|kafka.*</expression>
                    <daoClass>
                      <transform>PASCAL</transform>
                      <expression>$0_D_B_Dao</expression>
                    </daoClass>
                    <pojoClass>
                      <transform>PASCAL</transform>
                      <expression>$0_D_B</expression>
                    </pojoClass>
                    <pojoImplements>com.ke.bella.workflow.db.repo.Operator</pojoImplements>
                    <recordImplements>com.ke.bella.workflow.db.repo.Operator</recordImplements>
                  </table>
                </tables>
              </matchers>
            </strategy>

            <database>
              <name>org.jooq.meta.mysql.MySQLDatabase</name>
              <inputSchema>bella_workflow</inputSchema>
              <outputSchemaToDefault>true</outputSchemaToDefault>
              <forcedTypes>
                <forcedType>
                  <name>INTEGER</name>
                  <includeExpression>.*</includeExpression>
                  <includeTypes>TINYINT\(.*\)</includeTypes>
                </forcedType>
              </forcedTypes>
              <includes>
                .*
              </includes>
              <unsignedTypes>false</unsignedTypes>
            </database>
            <generate>
              <deprecated>false</deprecated>
              <records>true</records>
              <pojos>true</pojos>
              <daos>false</daos>
            </generate>
            <target>
              <packageName>com.ke.bella.workflow.db</packageName>
              <directory>src/codegen/java</directory>
              <encoding>UTF-8</encoding>
            </target>
          </generator>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>add-source</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>src/codegen/java</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.jacoco</groupId>
        <artifactId>jacoco-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-pmd-plugin</artifactId>
        <version>3.8</version>
        <configuration>
          <rulesets>
            <ruleset>rulesets/java/ali-concurrent.xml</ruleset>
            <ruleset>rulesets/java/ali-constant.xml</ruleset>
            <ruleset>rulesets/java/ali-exception.xml</ruleset>
            <ruleset>rulesets/java/ali-flowcontrol.xml</ruleset>
            <ruleset>rulesets/java/ali-naming.xml</ruleset>
            <ruleset>rulesets/java/ali-oop.xml</ruleset>
            <ruleset>rulesets/java/ali-orm.xml</ruleset>
            <ruleset>rulesets/java/ali-other.xml</ruleset>
            <ruleset>rulesets/java/ali-set.xml</ruleset>
          </rulesets>
          <printFailingErrors>true</printFailingErrors>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>check</goal>
            </goals>
          </execution>
        </executions>
